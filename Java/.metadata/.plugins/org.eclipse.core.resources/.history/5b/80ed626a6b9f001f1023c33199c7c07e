package com.java.basics;

public class LeapYear {
	static int checkLeap(int N){
		if(N%400 == 0  ||  (  N%4 ==0 && N%100 != 0) ) 
	     {
	         return 1;
	         
	     }
	         return 0;
	         
	     };
	public static void main(String[] args) {
		int N=400;
		System.out.println(checkLeap(N));
	}

}
